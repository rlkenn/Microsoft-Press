<Window x:Class="Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello"
        mc:Ignorable="d"
        Title="MainWindow" Height="174" Width="396">
    <Grid Margin="0,0,15,13">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="272*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="68*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Banner" HorizontalAlignment="Left" Height="43" Margin="20,20,0,0" TextWrapping="Wrap" Text="Please enter your name." VerticalAlignment="Top" Width="237" FontSize="20"/>
        <Button x:Name="ok" Content="OK" Grid.Column="2" HorizontalAlignment="Left" Margin="3,77,0,0" VerticalAlignment="Top" Width="68" RenderTransformOrigin="-0.747,-0.55" Height="23" Grid.ColumnSpan="2" Click="okClick"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="23" Margin="20,77,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="237" TextChanged="userName_TextChanged"/>

    </Grid>
</Window>
